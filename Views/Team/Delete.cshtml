@using Test2.Data
@model Team

<h1>Are you sure you want to delete this team?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
   @* <input type="hidden" value="AddressId" id="AddressId" />*@
    <div class="form-group">
        <label asp-for="Name">Title</label>
        <input asp-for="Name" class="form-control" placeholder="Title">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueName">Description</label>
        <input asp-for="LeagueName" class="form-control" placeholder="Description">
        <span asp-validation-for="LeagueName" class="text-danger"></span>
    </div>

</form>
<div class="form-group">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>

