@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@model Test2.ViewModels.HubViewModel

<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Team" asp-action="Create">Create a new Team</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="League" asp-action="Create">Create a new League</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Player" asp-action="Create">Create a new Player</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="FixtureAndResult" asp-action="Create">Create a new Fixture or Result</a>

<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-4 fw-normal">Your Teams</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Teams)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @*<img class="card-img-top" src="@item.Name" width="100%" height="225" alt="Card image cap">*@
                        <img width="100%" height="225" alt="Card image cap" src="https://th.bing.com/th/id/R.f8ba61c51225d206c63cb7312dc5e4b4?rik=hwATBiueb8kReg&riu=http%3a%2f%2fwww.basketballni.com%2fwp-content%2fuploads%2f2015%2f09%2fBNI-Logo.png&ehk=ALyuN15Wg8cR8eH1b%2fwCHA6N7ugyaUcYtrrBLuMDH7E%3d&risl=&pid=ImgRaw&r=0" />

                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Team" asp-action="Detail" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="Team" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Team" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.LeagueName</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-4 fw-normal">Your Leagues</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Leagues)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @*<img class="card-img-top" src="@item.Name" width="100%" height="225" alt="Card image cap">*@
                        <img width="100%" height="225" alt="Card image cap" src="https://th.bing.com/th/id/R.f8ba61c51225d206c63cb7312dc5e4b4?rik=hwATBiueb8kReg&riu=http%3a%2f%2fwww.basketballni.com%2fwp-content%2fuploads%2f2015%2f09%2fBNI-Logo.png&ehk=ALyuN15Wg8cR8eH1b%2fwCHA6N7ugyaUcYtrrBLuMDH7E%3d&risl=&pid=ImgRaw&r=0" />
                        <div class="card-body">
                            <p class="card-text">@item.Leaguename</p>
                            <p class="card-text">@item.Leaguename</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="League" asp-action="Detail" asp-route-id="@item.League_id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="League" asp-action="Edit" asp-route-id="@item.League_id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="League" asp-action="Delete" asp-route-id="@item.League_id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.LeagueDescription</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-4 fw-normal">Your Players</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Players)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @*<img class="card-img-top" src="@item.Name" width="100%" height="225" alt="Card image cap">*@
                        <img width="100%" height="225" alt="Card image cap" src="https://th.bing.com/th/id/R.f8ba61c51225d206c63cb7312dc5e4b4?rik=hwATBiueb8kReg&riu=http%3a%2f%2fwww.basketballni.com%2fwp-content%2fuploads%2f2015%2f09%2fBNI-Logo.png&ehk=ALyuN15Wg8cR8eH1b%2fwCHA6N7ugyaUcYtrrBLuMDH7E%3d&risl=&pid=ImgRaw&r=0" />
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Name</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="Player" asp-action="Detail" asp-route-id="@item.Player_id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="Player" asp-action="Edit" asp-route-id="@item.Player_id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="Player" asp-action="Delete" asp-route-id="@item.Player_id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.Name</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-4 fw-normal">Your Fixtures</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Fixtures)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        @*<img class="card-img-top" src="@item.Name" width="100%" height="225" alt="Card image cap">*@
                        <img width="100%" height="225" alt="Card image cap" src="https://th.bing.com/th/id/R.f8ba61c51225d206c63cb7312dc5e4b4?rik=hwATBiueb8kReg&riu=http%3a%2f%2fwww.basketballni.com%2fwp-content%2fuploads%2f2015%2f09%2fBNI-Logo.png&ehk=ALyuN15Wg8cR8eH1b%2fwCHA6N7ugyaUcYtrrBLuMDH7E%3d&risl=&pid=ImgRaw&r=0" />
                        <div class="card-body">
                            <p class="card-text">@item.DatefGame</p>
                            <p class="card-text">@item.DatefGame</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="FixtureAndResult" asp-action="Detail" asp-route-id="@item.Match_id"
                                   class="btn btn-sm btn-outline-secondary">View</a>
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-controller="FixtureAndResult" asp-action="Edit" asp-route-id="@item.Match_id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                        <a asp-controller="FixtureAndResult" asp-action="Delete" asp-route-id="@item.Match_id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.Hometeam</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>