@using Test2.ViewModels
@model CreateLeagueViewModel


<h1>This form will Create a new league to be tracked, please ensure all the information is correct and relevant</h1>
<form method="post" asp-action="Create">
    <input type="hidden" id="BasketballNiId" name="BasketballNiId" asp-for="BasketballNiId" />
    <div class="form-group">
        <label asp-for="Leaguename">League Name</label>
        <input asp-for="Leaguename" class="form-control" placeholder="Enter League Name">
        <span asp-validation-for="Leaguename" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LeagueDescription">League Description</label>
        <input asp-for="LeagueDescription" class="form-control" placeholder="Enter League Description">
        <span asp-validation-for="LeagueDescription" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Level">The level</label>
        <input asp-for="Level" class="form-control" placeholder="Enter level">
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


@section Scripts
    {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}