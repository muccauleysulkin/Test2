@using Test2.ViewModels
@model EditPlayerViewModel

<h1>This form will edit the existing information, please ensure all the information is correct and relevant</h1> 
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    
    <input type="hidden" id="BasketballNiId" name="BasketballNiId" asp-for="BasketballNiId" />
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Points">Points</label>
        <input asp-for="Points" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Points" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TeamName">Team Name</label>
        <input asp-for="TeamName" class="form-control" placeholder="Enter email">
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Assists">Assists</label>
        <input asp-for="Assists" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Assists" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rebounds">Rebpunds</label>
        <input asp-for="Rebounds" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Rebounds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Blocks">Blocks</label>
        <input asp-for="Blocks" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Blocks" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Steals">STeals</label>
        <input asp-for="Steals" class="form-control" placeholder="Enter email">
        <span asp-validation-for="Steals" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts
    {

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}